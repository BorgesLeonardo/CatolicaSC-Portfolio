{
  "name": "crowdfunding-backend",
  "version": "1.0.0",
  "description": "Backend API para Plataforma de Crowdfunding",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "listen": "stripe listen --forward-to localhost:3333/api/webhooks/stripe",
    "build": "tsc",
    "start": "npm run prisma:deploy && node dist/server.js",
    "postinstall": "prisma generate",
    "lint": "echo 'Lint disabled for CI/CD'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && node scripts/normalize-lcov.js coverage/lcov.info",
    "test:ci": "jest --ci --coverage --watchAll=false && node scripts/normalize-lcov.js coverage/lcov.info",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "seed:contributions": "tsx prisma/seed-contributions.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@clerk/express": "^1.0.0",
    "@prisma/client": "^5.7.1",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "multer": "^2.0.2",
    "nanoid": "^5.1.5",
    "pino": "^9.3.2",
    "sanitize-html": "^2.13.0",
    "slugify": "^1.6.6",
    "stripe": "^18.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.14",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "crowdfunding",
    "api",
    "backend",
    "express",
    "prisma",
    "clerk"
  ],
  "author": "Catolica SC Portfolio Team",
  "license": "MIT"
}
